{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["src/ui/*"],
      "@domains/*": ["src/domains/*"],
      "@lib/*": ["src/lib/*"],
      "@design-system/*": ["src/design-system/*"],
      "@context/*": ["src/context/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@app/*": ["app/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
