{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "ES2021.String",
      "ES2022.Array"
    ],
    "module": "CommonJS",
    "jsx": "react-native",
    "types": [
      "jest",
      "node",
      "react-native"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["../*"],
      "@ui/*": ["../src/ui/*"],
      "@domains/*": ["../src/domains/*"],
      "@lib/*": ["../src/lib/*"],
      "@design-system": ["../src/design-system"],
      "@design-system/*": ["../src/design-system/*"],
      "@context/*": ["../src/context/*"],
      "@types": ["../src/types"],
      "@types/*": ["../src/types/*"],
      "@app/*": ["../app/*"]
    },
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "setup.ts",
    "setup.d.ts"
  ],
  "exclude": [
    "../node_modules",
    "../**/*.stories.tsx",
    "../**/*.test.tsx",
    "../**/*.spec.ts"
  ]
}
